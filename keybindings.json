// Поместите настраиваемые сочетания клавиш в этот файл, чтобы переопределить сочетания клавиш по умолчанию.
[
    {
        "key": "ctrl+shift+alt+i",
        "command": "editor.action.inspectTMScopes"
    }, 
    {
        "key": "ctrl+shift+alt+p",
        "command": "editor.action.inspectTMScopes"
    },
    { 
        "key": "ctrl+shift+/",
        "command": "editor.action.blockComment",
        "when": "editorTextFocus && !editorReadonly" 
    },
    { 
        "key": "ctrl+shift+m",
        "command": "editor.action.selectToBracket",
        "args": {"selectBrackets": false},
        "when": "editorTextFocus && !editorReadonly" 
    },
    {
        "key": "ctrl+shift+d",
        "command": "editor.action.duplicateSelection",
        "when": "editorTextFocus"
    },
    { 
        "key": "ctrl+shift+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly" 
    },
    { 
        "key": "ctrl+shift+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly" 
    },
    {
        "key": "ctrl+n", 
        "command": "explorer.newFile",
        "when": "explorerViewletFocus" 
    },
    {
        "key": "ctrl+shift+n", 
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus" 
    },

    // Gist-{
    {
        "key": "ctrl+g i",
        "command": "extension.gist.insert",
        "when": "editorTextFocus && !editorReadonly" 
    },
    {
        "key": "ctrl+g ctrl+alt+o",
        "command": "extension.gist.open",
        "when": "editorTextFocus && !editorReadonly" 
    },
    {
        "key": "ctrl+alt+o",
        "command": "-extension.gist.open"
    },
    {
        "key": "ctrl+g ctrl+alt+a",
        "command": "extension.gist.add",
        "when": "editorTextFocus && !editorReadonly" 
    },
    {
        "key": "ctrl+alt+a ctrl+alt+a",
        "command": "-extension.gist.add"
    },
    {
        "key": "ctrl+g ctrl+alt+b",
        "command": "extension.gist.openInBrowser",
        "when": "editorTextFocus && !editorReadonly" 
    },
    {
        "key": "ctrl+alt+b",
        "command": "-extension.gist.openInBrowser"
    },
    {
        "key": "ctrl+g ctrl+alt+=",
        "command": "extension.profile.select",
        "when": "editorTextFocus && !editorReadonly" 
    },
    {
        "key": "ctrl+alt+=",
        "command": "-extension.profile.select"
    },
    {
        "key": "ctrl+g n",
        "command": "extension.gist.create",
        "when": "editorTextFocus && !editorReadonly" 
    },
    // }-Gist

    /* {
        "key": "shift+alt+=",
        "command": "editor.action.joinLines",
        "when": "editorTextFocus && !editorReadonly" 
    }, */
    /* {
        "key": "shift+alt+l",
        "command": "expandLineSelection",
        "when": "editorTextFocus && !editorReadonly" 
    }, */
]